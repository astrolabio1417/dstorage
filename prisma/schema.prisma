// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum NodeType {
  FOLDER
  FILE
}

model Node {
  id        Int      @id @default(autoincrement())
  name      String
  type      NodeType
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  parent    Node?    @relation("ParentNodes", fields: [parentId], references: [id])
  parentId  Int?

  ParentNodes Node[]     @relation("ParentNodes")
  NodeFiles   FileData[]

  @@unique([name, parentId])
}

model FileData {
  id         Int      @id @default(autoincrement())
  field      Node     @relation(fields: [fieldId], references: [id])
  fieldId    Int
  url        String
  size       Int      @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  startRange Int      @default(0)
  endRange   Int      @default(0)

  @@unique([fieldId, startRange])
}
